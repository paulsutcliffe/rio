= form_for @album do |f|
  - if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titulo, "Título"
    = f.text_field :titulo
  .field
    = f.label :codigo_embed, "Código Embed"
    = f.text_field :codigo_embed
  .field
    = f.label :ano, "Año"
    = f.text_field :ano
  .field
    = f.label :creditos, "Créditos"
    = f.text_field :creditos
  .actions
    = f.submit 'Guardar'
